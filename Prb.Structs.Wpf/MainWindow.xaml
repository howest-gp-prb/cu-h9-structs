<Window x:Class="Prb.Structs.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prb.Structs.Wpf"
        mc:Ignorable="d"
        Title="Coordinates" Height="200" Width="310">
    <Grid>
        <ListBox x:Name="lstPath" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="10" Width="100"/>
        <Label x:Name="lblPosition" Content="Position" HorizontalAlignment="Left" Margin="180, 70,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" Width="55"/>
        <Button x:Name="btnUp" Content="🡹" HorizontalAlignment="Left" Margin="194,26,0,0" VerticalAlignment="Top" Padding="5" Click="BtnUp_Click"/>
        <Button x:Name="btnRight" Content="🡺" HorizontalAlignment="Left" Margin="250,70,0,0" VerticalAlignment="Top" Padding="5" Click="BtnRight_Click"/>
        <Button x:Name="btnDown" Content="🡻" HorizontalAlignment="Left" Margin="194,115,0,0" VerticalAlignment="Top" Padding="5" Click="BtnDown_Click"/>
        <Button x:Name="btnLeft" Content="🡸" HorizontalAlignment="Left" Margin="140,70,0,0" VerticalAlignment="top" Padding="5" Click="BtnLeft_Click"/>

    </Grid>
</Window>
